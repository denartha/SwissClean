public class SwissClean {

    public static String sanitizeInput(String input) {
        if (input == null) {
            return null;
        }
        
        // Remove all occurrences of ":/", "./", and "../" from the string.
        // Use regular expressions for pattern matching and replacement.
        input = input.replaceAll(":/", "");
        input = input.replaceAll("\\.\\./", "");
        input = input.replaceAll("\\./", "");
        
        return input;
    }
